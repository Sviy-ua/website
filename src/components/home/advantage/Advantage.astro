---
import advantages from "@/data/advantages";
import { Icon } from "astro-icon/components";
import map from "lodash/map";
import AdvantageItem from "./AdvantageItem.astro";
---

<section
  id="advantages"
  class="bg-yellow relative default-container remove-all-margin pt-[60px]"
>
  <Icon
    name="figures/heart"
    class="absolute top-20 right-20 text-yellow stroke-1 stroke-black opacity-0 xl:opacity-100"
    height={200}
    width={200}
    data-aos="fade-up"
  />
  <h2 data-aos="fade-up">ПЕРЕВАГИ</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8 mt-12">
    {
      map(advantages, (item, index) => (
        <AdvantageItem {...item} index={index} />
      ))
    }
  </div>
</section>
