---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="flex flex-row items-center gap-4 w-full">
  <Icon name={icon} width={60} height={60} class="min-w-[60px]" />
  <div class="flex flex-col justify-between flex-1 z-10">
    <p class="text-xl font-medium uppercase">{title}</p>
    <p class="text-lg text-balance">{description}</p>
    <p></p>
  </div>
</div>
