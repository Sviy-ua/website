---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<section id="hero" class="grid md:grid-cols-2 md:gap-0">
  <div class="relative h-full">
    <Image
      src="/hero.jpg"
      width={1920}
      height={1080}
      alt="hero"
      loading="eager"
      class="object-cover object-center h-full"
    />
    <div
      class="absolute top-0 bg-yellow uppercase text-xl font-medium sm:text-2xl md:text-3xl px-4 py-3"
    >
      м. Дубно
    </div>
  </div>
  <div class="px-5 py-10 md:bg-yellow md:px-12">
    <p class="text-5xl font-medium uppercase">Квартири від 40 м2</p>
    <p class="text-xl uppercase md:text-2xl mt-2">
      в найзручнішому районі міста
    </p>
    <div class="relative size-40 mt-[75px] ml-10">
      <Icon name="figures/heart" class="pl-4 size-full text-orange" />
      <p class="absolute uppercase text-2xl left-0 top-6">де</p>
      <p class="absolute uppercase text-2xl -right-1/2 top-6">омріяне</p>
      <p class="absolute uppercase text-2xl left-1/3 top-1/3">стає</p>
      <p class="absolute uppercase text-2xl -right-1/2 top-20">своїм</p>
    </div>
  </div>
</section>
