---
import type { MenuItem } from "@/types/MenuItem";
import Logo from "./Logo.astro";
import NavbarDesktop from "./NavbarDesktop";
import NavbarMobile from "./NavbarMobile";

const menu: MenuItem[] = [
  {
    id: "home",
    title: "Про SVIY",
    href: "/",
    children: [
      { id: "advantages", title: "Переваги", href: "/#advantages" },
      { id: "apartaments", title: "Планування", href: "/#apartaments" },
      { id: "location", title: "Локація", href: "/#location" },
      { id: "tech", title: "Тех.характеристики", href: "/#specification" },
    ],
  },
  {
    id: "apartaments",
    title: "Квартири",
    href: "/apartaments",
  },
  {
    id: "building",
    title: "Будівництво",
    href: "/building",
  },
  {
    id: "contacts",
    title: "Контакти",
    href: "/contacts",
  },
];
---

<header
  class="py-2 px-4 sm:px-6 md:px-8 lg:px-10 bg-orange flex flex-row items-center justify-between w-screen gap-4 overflow-hidden"
>
  <Logo />
  <NavbarDesktop client:load items={menu} />
  <NavbarMobile client:load items={menu}>
    <Logo />
  </NavbarMobile>
</header>
