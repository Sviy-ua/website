---
import type { MenuItem } from "@/types/MenuItem";
import Logo from "./Logo.astro";
import NavbarDesktop from "./NavbarDesktop";
import NavbarMobile from "./NavbarMobile";

const menu: MenuItem[] = [
  {
    id: "home",
    title: "Про SVIY",
    href: "/",
    children: [
      { id: "advantages", title: "Переваги", href: "/#advantages" },
      { id: "apartaments", title: "Планування", href: "/#apartaments" },
      { id: "genplan", title: "Генплан", href: "/#genplan" },
      { id: "location", title: "Локація", href: "/#location" },
      { id: "tech", title: "Тех.характеристики", href: "/#tech" },
    ],
  },
  {
    id: "apartaments",
    title: "Квартири",
    href: "/apartaments",
  },
  {
    id: "buildings",
    title: "Будівництво",
    href: "/buildings",
  },
  {
    id: "contacts",
    title: "Контакти",
    href: "/contacts",
  },
];

const pathname = new URL(Astro.request.url).pathname;
---

<header
  class="py-2 px-4 sm:px-6 md:px-8 lg:px-10 bg-orange flex flex-row items-center justify-between w-screen gap-4"
>
  <Logo />
  <NavbarDesktop client:load items={menu} />
  <NavbarMobile client:load items={menu}>
    <Logo />
  </NavbarMobile>
</header>
